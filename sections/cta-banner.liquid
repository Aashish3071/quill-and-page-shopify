
<section class="py-16 bg-cream">
  <div class="container mx-auto px-6 text-center">
    <h2 class="font-serif text-3xl font-bold mb-6">{{ section.settings.title }}</h2>
    <p class="max-w-2xl mx-auto text-gray-700 mb-8">
      {{ section.settings.description }}
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <a href="{{ section.settings.primary_button_link }}" class="inline-block px-6 py-3 bg-gold text-charcoal font-medium rounded-md hover:bg-gold/90 transition-colors">
        {{ section.settings.primary_button_text }}
      </a>
      <a href="{{ section.settings.secondary_button_link }}" class="inline-block px-6 py-3 bg-charcoal text-white font-medium rounded-md hover:bg-charcoal/90 transition-colors">
        {{ section.settings.secondary_button_text }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CTA Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Join Our Journey"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Whether you're a reader, writer, or book lover, there are many ways to be part of our community."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Submit Your Manuscript"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link",
      "default": "/pages/submissions"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Explore Our Books"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "CTA Banner"
    }
  ]
}
{% endschema %}
