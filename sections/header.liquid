<header class="site-header">
  <div class="container">
    {% if section.settings.logo %}
      <a href="/" class="logo">
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="Site Logo">
      </a>
    {% else %}
      <h1><a href="/">Store Name</a></h1>
    {% endif %}

    <nav class="main-menu">
      <ul>
        {% for link in section.settings.menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu",
      "default": "main-menu"
    }
  ],
  "max_blocks": 0,
  "presets": [
    {
      "name": "Header",
      "category": "Header"
    }
  ]
}
{% endschema %}
