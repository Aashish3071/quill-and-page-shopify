      "id": "facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "linkedin_link",
      "label": "LinkedIn URL"
    },
    {
      "type": "text",
      "id": "navigation_title",
      "label": "Navigation Title",
      "default": "Navigation"
    },
    {
      "type": "link_list",
      "id": "navigation_menu",
      "label": "Navigation Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "categories_title",
      "label": "Categories Title",
      "default": "Book Categories"
    },
    {
      "type": "link_list",
      "id": "categories_menu",
      "label": "Categories Menu",
      "default": "categories"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Title",
      "default": "Contact Us"
    },
    {
      "type": "text",
