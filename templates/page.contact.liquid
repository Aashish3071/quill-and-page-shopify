      "default": "info@quillandpage.com"
    },
    {
      "type": "text",
      "id": "email_submissions",
      "label": "Submissions Email",
      "default": "submissions@quillandpage.com"
    },
    {
      "type": "text",
      "id": "email_press",
      "label": "Press Email",
