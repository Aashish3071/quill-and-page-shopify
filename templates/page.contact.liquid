
{% section 'page-header' %}

<section class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div>
        <h2 class="font-serif text-2xl font-semibold mb-6">Send Us a Message</h2>
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="bg-green-50 border border-green-200 text-green-800 p-4 rounded-md mb-6">
              <p>Thank you for your message. We'll get back to you as soon as possible.</p>
            </div>
          {% endif %}
          
          {% if form.errors %}
            <div class="bg-red-50 border border-red-200 text-red-800 p-4 rounded-md mb-6">
              <p>There was an error submitting your message. Please check the form and try again.</p>
            </div>
          {% endif %}
          
          <div class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="space-y-2">
                <label for="contact-name" class="text-sm font-medium">Name</label>
                <input 
                  id="contact-name" 
                  type="text" 
                  name="contact[name]" 
                  class="border border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
                  required
                >
              </div>
              <div class="space-y-2">
                <label for="contact-email" class="text-sm font-medium">Email</label>
                <input 
                  id="contact-email" 
                  type="email" 
                  name="contact[email]" 
                  class="border border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
                  required
                >
              </div>
            </div>
            
            <div class="space-y-2">
              <label for="contact-subject" class="text-sm font-medium">Subject</label>
              <input 
                id="contact-subject" 
                type="text" 
                name="contact[subject]" 
                class="border border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
              >
            </div>
            
            <div class="space-y-2">
              <label for="contact-message" class="text-sm font-medium">Message</label>
              <textarea 
                id="contact-message" 
                name="contact[body]" 
                rows="6" 
                class="border border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent min-h-[150px]"
                required
              ></textarea>
            </div>
            
            <button type="submit" class="bg-charcoal hover:bg-charcoal/90 text-white px-6 py-3 rounded-md transition-colors">
              Send Message
            </button>
          </div>
        {% endform %}
      </div>
      
      <!-- Contact Info -->
      <div>
        <h2 class="font-serif text-2xl font-semibold mb-6">Get in Touch</h2>
        
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="bg-cream p-3 rounded-md mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gold">
                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div>
              <h3 class="font-medium mb-1">Visit Us</h3>
              <p class="text-gray-600">
                {{ section.settings.address | default: '123 Book Lane<br>Brooklyn, NY 11201<br>United States' }}
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="bg-cream p-3 rounded-md mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gold">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-medium mb-1">Call Us</h3>
              <p class="text-gray-600">
                {{ section.settings.phone | default: '+1 (212) 456-7890' }}<br>
                {{ section.settings.phone_hours | default: 'Monday to Friday, 9am to 5pm EST' }}
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="bg-cream p-3 rounded-md mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gold">
                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-medium mb-1">Email Us</h3>
              <p class="text-gray-600">
                General Inquiries: <a href="mailto:{{ section.settings.email_general | default: 'info@quillandpage.com' }}" class="text-gold hover:underline">{{ section.settings.email_general | default: 'info@quillandpage.com' }}</a><br>
                Submissions: <a href="mailto:{{ section.settings.email_submissions | default: 'submissions@quillandpage.com' }}" class="text-gold hover:underline">{{ section.settings.email_submissions | default: 'submissions@quillandpage.com' }}</a><br>
                Press: <a href="mailto:{{ section.settings.email_press | default: 'press@quillandpage.com' }}" class="text-gold hover:underline">{{ section.settings.email_press | default: 'press@quillandpage.com' }}</a>
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="bg-cream p-3 rounded-md mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gold">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <div>
              <h3 class="font-medium mb-1">Office Hours</h3>
              <p class="text-gray-600">
                {{ section.settings.hours | default: 'Monday to Friday: 9am - 5pm EST<br>Saturday: 10am - 3pm EST<br>Sunday: Closed' }}
              </p>
            </div>
          </div>
        </div>
        
        <!-- Social Media -->
        <div class="mt-8">
          <h3 class="font-medium mb-4">Follow Us</h3>
          <div class="flex space-x-4">
            <a href="{{ section.settings.facebook_link }}" class="bg-cream p-3 rounded-full hover:bg-gold hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-facebook"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
            </a>
            <a href="{{ section.settings.twitter_link }}" class="bg-cream p-3 rounded-full hover:bg-gold hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-twitter"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
            </a>
            <a href="{{ section.settings.instagram_link }}" class="bg-cream p-3 rounded-full hover:bg-gold hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-instagram"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg>
            </a>
            <a href="{{ section.settings.linkedin_link }}" class="bg-cream p-3 rounded-full hover:bg-gold hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"></circle></svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Map Section -->
<section class="py-16 bg-cream">
  <div class="container mx-auto px-6">
    <h2 class="font-serif text-2xl font-semibold mb-6 text-center">Visit Our Bookstore</h2>
    <div class="bg-white p-2 rounded-md shadow-md">
      {% if section.settings.map_embed_code != blank %}
        <div class="h-[400px] w-full rounded">
          {{ section.settings.map_embed_code }}
        </div>
      {% else %}
        <div class="h-[400px] w-full bg-gray-200 rounded flex items-center justify-center">
          <p class="text-gray-500">Interactive Map Coming Soon</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

