{% layout 'theme' %}

<main class="cart-page">
  <h1>Your Cart</h1>

  {% if cart.item_count > 0 %}
    {% for item in cart.items %}
      <div class="cart-item">
        {% if item.image %}
          <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.product.title }}">
        {% else %}
          <p>No image available</p>
        {% endif %}

        <div class="cart-info">
          <h3>{{ item.product.title }}</h3>

          {% if item.variant.title != 'Default Title' %}
            <p>Variant: {{ item.variant.title }}</p>
          {% endif %}

          <p>Quantity: {{ item.quantity }}</p>
          <p>Price: {{ item.line_price | money }}</p>

          <a href="/cart/change?line={{ forloop.index }}&quantity=0">Remove</a>
        </div>
      </div>
    {% endfor %}

    <div class="cart-summary">
      <p><strong>Total:</strong> {{ cart.total_price | money }}</p>
      <a href="/checkout" class="btn">Proceed to Checkout</a>
    </div>
  {% else %}
    <p>Your cart is empty.</p>
  {% endif %}
</main>
