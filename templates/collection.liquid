
<div class="bg-cream py-10">
  <div class="container mx-auto px-6">
    <h1 class="font-serif text-4xl font-bold mb-2">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="text-gray-600 mb-6">{{ collection.description }}</p>
    {% endif %}
    
    <div class="flex flex-col md:flex-row items-center gap-4 mb-6">
      <div class="relative w-full md:w-80">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.3-4.3"></path>
        </svg>
        <input 
          type="search" 
          id="collection-search" 
          placeholder="Search books or authors" 
          class="pl-10 bg-white border border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
        >
      </div>
    </div>
  </div>
</div>

<div class="py-10 bg-white">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10">
      <!-- Sidebar -->
      <div class="order-2 md:order-1">
        <div class="sticky top-24">
          <h3 class="font-serif text-xl font-semibold mb-4">Categories</h3>
          <div class="space-y-2">
            {% for collection_link in linklists.categories.links %}
              <div class="flex items-center space-x-2">
                <input 
                  type="checkbox" 
                  id="category-{{ collection_link.title | handle }}" 
                  class="w-4 h-4 rounded border-gray-300 text-gold focus:ring-gold"
                  {% if collection_link.url contains collection.handle %}checked{% endif %}
                >
                <label
                  for="category-{{ collection_link.title | handle }}"
                  class="text-sm font-medium leading-none"
                >
                  <a href="{{ collection_link.url }}" class="hover:text-gold">{{ collection_link.title }}</a>
                </label>
              </div>
            {% endfor %}
          </div>
          
          <div class="my-6 h-px bg-gray-200"></div>
          
          <h3 class="font-serif text-xl font-semibold mb-4">Price Range</h3>
          <div class="grid grid-cols-2 gap-4">
            <input type="number" placeholder="Min" class="border border-gray-300 rounded-md px-4 py-2 w-full">
            <input type="number" placeholder="Max" class="border border-gray-300 rounded-md px-4 py-2 w-full">
          </div>
          <button class="w-full mt-4 bg-charcoal hover:bg-charcoal/90 text-white px-4 py-2 rounded-md transition-colors">
            Apply
          </button>
        </div>
      </div>
      
      <!-- Book Grid -->
      <div class="order-1 md:order-2 md:col-span-3">
        {% if collection.products.size > 0 %}
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for product in collection.products %}
              {% render 'book-card', product: product %}
            {% endfor %}
          </div>
          
          {% if paginate.pages > 1 %}
            <div class="flex justify-center space-x-2 mt-12">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-100 transition-colors">
                  Previous
                </a>
              {% endif %}
              
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-100 transition-colors">
                    {{ part.title }}
                  </a>
                {% else %}
                  <span class="px-4 py-2 border border-gold bg-gold text-white rounded-md">
                    {{ part.title }}
                  </span>
                {% endif %}
              {% endfor %}
              
              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-100 transition-colors">
                  Next
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% else %}
          <div class="text-center py-10">
            <h3 class="font-serif text-xl font-semibold mb-2">No Books Found</h3>
            <p class="text-gray-600">Try adjusting your search or filter criteria</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
