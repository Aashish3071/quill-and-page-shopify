
{% comment %}
  Renders social media icons.
  Usage:
  {% render 'social-icons', class: 'additional-classes', icon_size: 20 %}
{% endcomment %}

{% assign icon_size = icon_size | default: 20 %}

<div class="flex space-x-4 {{ class }}">
  {% if settings.social_facebook_link != blank %}
    <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook" class="text-gray-400 hover:text-gold transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-facebook"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
    </a>
  {% endif %}
  
  {% if settings.social_twitter_link != blank %}
    <a href="{{ settings.social_twitter_link }}" target="_blank" rel="noopener" aria-label="Twitter" class="text-gray-400 hover:text-gold transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-twitter"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
    </a>
  {% endif %}
  
  {% if settings.social_instagram_link != blank %}
    <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram" class="text-gray-400 hover:text-gold transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-instagram"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg>
    </a>
  {% endif %}
  
  {% if settings.social_linkedin_link != blank %}
    <a href="{{ settings.social_linkedin_link }}" target="_blank" rel="noopener" aria-label="LinkedIn" class="text-gray-400 hover:text-gold transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"></circle></svg>
    </a>
  {% endif %}
  
  {% if settings.social_pinterest_link != blank %}
    <a href="{{ settings.social_pinterest_link }}" target="_blank" rel="noopener" aria-label="Pinterest" class="text-gray-400 hover:text-gold transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pinterest"><path d="M9 4C7 4 4 6 4 10a7.5 7.5 0 0 0 4 7c0-1 0-3 1-3 0 0 2 0 2 2 0 2 1 3 2 3 2 0 3-1 3-4s-2-4-4-4c-2 0-4 2-4 3 0 1 1 2 1 2s-1 3-1 3c-1 2-1 2-1 2"/><path d="M14 13a1 1 0 1 1-2 0a1 1 0 0 1 2 0Z"/></svg>
    </a>
  {% endif %}
</div>
